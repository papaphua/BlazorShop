@page "/accounts/password/reset/request"

<div class="reset background">
    <div class="form">
        <EditForm Model="EmailDto" OnValidSubmit="SendAction">
            <DataAnnotationsValidator/>
            <div class="content">
                <div class="title">
                    <h2>Send Password Reset Link</h2>
                </div>

                <div class="fields">
                    <div>
                        <label class="form-label" for="@EmailDto.Email">Email</label>
                        <InputText class="form-control" type="email" @bind-Value="EmailDto.Email"/>
                        <ValidationMessage For="@(() => EmailDto.Email)"></ValidationMessage>
                    </div>
                </div>

                <div class="buttons">
                    <button class="btn btn-primary" type="submit">Send</button>
                </div>
            </div>
        </EditForm>
    </div>
</div>